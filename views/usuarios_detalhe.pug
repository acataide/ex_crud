extends layout

block content
  h1= title
  form(method='post' action='/users/editar')
    input(type='hidden' name='id', value=user.id)
    if title == 'Novo Usuário'
      input(type='hidden' name='novo', value='true')
    p
      label(for='name') Nome: 
      input(name='name' value=user.name)
    p
      label(for='email') E-mail: 
      input(type='email' name='email' value=user.email)
    p
      label(for='numberrange') Número: 
      input(type='number' name='numberrange' value=user.numberrange)
    p
      label(for='boolean') Booleano: 
      input(type='checkbox' name='boolean' checked=user.boolean )
    p
      input(type='submit' value='Enviar')
